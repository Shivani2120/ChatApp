<div class="row">
    <div class="col-md-3 bgcol">
        <h4 class="text-light">Rooms </h4>
        
        <% if @user.present? %>
        <div>
            <%= turbo_stream_from "users" %>
            <div id="users">
                <%#= render @users %>
                <h4 class="text-center text-light"> <%= @user&.username || @single_room.name %> </h4>
            </div>
        </div>
        <% end %>
        <div class="user-room" style="width: 16rem;">
            <%= turbo_stream_from "rooms" %>
            <div id="rooms">
                <ul class="list-group list-group-flush">
                    <%= render @rooms %>
                </ul>
            </div>
        </div>
        <div class="mt-3">
            <%= link_to "New Room", new_room_path, class: "btn btn-outline-primary"%>
        </div>
        <%#= render partial: "rooms/new_room_form" %>

    </div>
    <div class="col-md-9 bg-color text-light">
        <% if @single_room %>
        <h4 class="text-center"> <%= @single_room.name %> </h4>
        <hr/>
            <%= turbo_stream_from @single_room %>
            <div id="messages">
                <%= render @messages %>
            </div>
            <%= render partial: "messages/new_message_form" %>
        <% end %>
    </div>
</div>
